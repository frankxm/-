.collection_wrap {
  margin-top: 20rpx;
}
.collection_wrap .collection_item {
  display: flex;
  border-bottom: solid 1rpx #ccc;
}
.collection_wrap .collection_item .image_wrap {
  padding: 10rpx 15rpx;
  flex: 6;
  display: flex;
  align-items: center;
  justify-content: center;
}
.collection_wrap .collection_item .image_wrap image {
  width: 80%;
  max-height: 190rpx;
}
.collection_wrap .collection_item .text_item {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collection_wrap .collection_item .text_item .title_item {
  font-weight: 600;
  font-size: 35rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collection_wrap .collection_item .text_item .view_item {
  font-weight: 400;
  color: gray;
}
.download_wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.download_wrap image {
  width: 70%;
}
.download_wrap .download_item {
  font-size: 40rpx;
  font-weight: 900;
}
.check {
  float: left;
}
.check .exchange_rate {
  text-align: center;
  border-radius: 100rpx;
  float: left;
  width: 300rpx;
  height: 200rpx;
  margin-left: 50rpx;
  margin-top: 20rpx;
  background-color: burlywood;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
}
.check .exchange_rate .exchange_item {
  width: 100%;
  height: 20%;
  font-size: 32rpx;
  font-weight: 600;
}
.check .exchange_rate:nth-child(n + 7) {
  margin-bottom: 40rpx;
}
.check .exchange_rate:first-child {
  background-color: darkcyan;
}
.check .exchange_rate:nth-child(2) {
  background-color: #5252a7;
}
.check .exchange_rate:nth-child(3) {
  background-color: lightskyblue;
}
.check .exchange_rate:nth-child(4) {
  background-color: burlywood;
}
.check .exchange_rate:nth-child(5) {
  background-color: greenyellow;
}
.check .exchange_rate:nth-child(6) {
  background-color: gold;
}
.check .exchange_rate:nth-child(7) {
  background-color: #7c7a12;
}
.check .exchange_rate:nth-child(8) {
  background-color: #8b1e31;
}
.website {
  padding: 10rpx;
  margin: 20rpx 10rpx 30rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.website .country {
  margin: 15rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: 宋体;
  color: #ccc;
  font-weight: 600;
}
.website .school_title {
  display: flex;
  justify-content: center;
  align-items: center;
}
.website .school_title .delimiter {
  font-size: 50rpx;
  color: #ccc;
  padding: 0 10rpx;
}
.website .school_title .school_name {
  font-style: oblique;
  font-family: 仿宋;
  font-weight: 600;
  font-weight: 1000;
  font-size: 50rpx;
}
.website .website_item {
  justify-content: center;
  align-items: center;
  display: flex;
}
