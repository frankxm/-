page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .item_menu {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_content {
  flex: 5;
}
.cates .cates_container .right_content .item_group .goods_title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}
.cates .cates_container .right_content .item_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_content .item_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_content .item_group .goods_list navigator {
  width: 100%;
  text-align: center;
}
.cates .cates_container .right_content .item_group .goods_list navigator image {
  width: 60%;
  max-height: 185rpx;
}
/* 搜索区域 */
.searchroot {
  background: #ffb985;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.searchinput {
  background: white;
  text-align: center;
  border-radius: 30rpx;
  flex: 1;
  margin-left: 20rpx;
}
.searchicon {
  width: 60rpx;
  height: 60rpx;
}
