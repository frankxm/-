page {
  padding-bottom: 90rpx;
}
.out {
  padding: 20rpx 30rpx;
}
.out .title_item {
  font-size: 55rpx;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: 800;
}
.out .detail_swiper swiper {
  height: 65vw;
  text-align: center;
}
.out .detail_swiper swiper image {
  width: 90%;
}
.out .text_item {
  border-bottom: gray solid 1rpx;
  padding-bottom: 10rpx;
}
.out .title_wrap .choose_wrap_title {
  font-weight: 600;
  font-size: 48rpx;
}
.out .title_wrap .icon_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
}
.out .choose_wrap {
  margin: 20rpx 0;
  border-top: 6rpx solid gray;
  padding: 0rpx 20rpx ;
}
.out .choose_wrap .choose_item {
  border-bottom: 1rpx solid gray;
}
.out .choose_wrap .choose_item .choose {
  display: flex;
}
.out .choose_wrap .choose_item .choose .text_radio {
  font-size: 40rpx;
  font-weight: 600;
  font-style: oblique;
  width: 100vw;
  justify-content: center;
  align-items: center;
  display: flex;
}
.out .choose_wrap .choose_item .choose radio {
  opacity: 0;
  width: 0;
  height: 0;
}
.out .choose_wrap .profession {
  margin: 10rpx 0;
  display: flex;
  flex-direction: column;
}
.out .choose_wrap .profession .profession_item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.out .choose_wrap .profession .profession_item .pro_item {
  font-style: oblique;
  font-weight: 500;
}
.out .choose_wrap .profession .profession_item .pro_text {
  font-style: oblique;
  font-weight: 500;
}
.btm_tool {
  border-top: #ccc 1rpx solid;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  background-color: #fff;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_comment {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffb985;
  font-size: 30rpx;
  color: black;
  font-weight: 600;
}
